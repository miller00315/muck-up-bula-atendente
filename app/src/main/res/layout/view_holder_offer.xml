<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:layout_width="150dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/offersLayout"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_foreground"
            android:id="@+id/image_offer"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/title_offer"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_below="@+id/image_offer"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description_offer"
            android:layout_below="@+id/title_offer"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/value_offer"
            android:layout_below="@id/description_offer"
            android:drawableStart="@drawable/ic_monetization_on_white_24dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:foregroundGravity="center"
            android:background="@drawable/background_button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/value_offer"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/value_send_offer"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_send_white_24dp"
            android:drawablePadding="5dp"
            android:background="@drawable/background_button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>