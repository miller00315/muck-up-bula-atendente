<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_single_edit"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id= "@+id/edit_text_alert_fragment"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title_single_edit"
        android:padding="10dp"
        android:background="@drawable/background_input_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/edit_text_alert_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/confirmar"
            android:id="@+id/confirm"
            android:textColor="#ffffff"
            android:background="@drawable/background_button_rounded"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="@string/cancelar"
            android:id="@+id/cancel"
            android:textColor="#ffffff"
            android:background="@drawable/background_button_rounded"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>